<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>

<% if masquerading? %>
<%= link_to "Stop Masquerading", user_masquerade_path("current_user", "current_user"), method: :delete %>
<% end %>

<%= form_tag movies_path, :method => 'get' do %>
  <p>
    <%= label_tag 'Title:' %>
    <%= text_field_tag :search_title, params[:search_title] %>
  </p>
  <p>
    <%= label_tag 'Director:' %>
    <%= text_field_tag :search_director, params[:search_director] %>
  </p>
  <p>
    <%= label_tag :duration %><br />
    <select name="duration">
      <option value="">Please select</option>
      <option value="1">Under 90 minutes</option>
      <option value="2">Between 90 and 120 minutes</option>
      <option value="3">Over 120 minutes</option>
    </select>
  </p>
  <p>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% @movies.each do |movie| %>
<%= link_to image_tag(movie.image_url(:thumb).to_s), movie_path(movie) %>
<h2><%= link_to movie.title, movie_path(movie) %> | <%= movie.review_average %>/10</h2>
<h3><%= formatted_date(movie.release_date) %></h3>
<h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
<p><%= movie.description %></p>
<hr>
<% end %>